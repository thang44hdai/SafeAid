<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5F5F5">

        <!-- Header với hình ảnh -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <ImageView
                android:id="@+id/ivGuideImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Guide image" />

            <!-- Overlay gradient -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/image_gradient_overlay" />

            <!-- Navigation buttons -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_button_background"
                    android:src="@drawable/ic_back"
                    android:padding="8dp"
                    android:contentDescription="Back button" />

                <ImageButton
                    android:id="@+id/btnBookmark"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_button_background"
                    android:src="@drawable/ic_bookmark"
                    android:padding="8dp"
                    android:contentDescription="Bookmark button" />
            </RelativeLayout>
        </FrameLayout>

        <!-- Content card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="-20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:backgroundTint="#F2F2F2"
                    android:padding="16dp">

                    <!-- Indicator line -->
                    <View
                        android:layout_width="40dp"
                        android:layout_height="4dp"
                        android:background="#E0E0E0"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp" />

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tvGuideTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"
                        android:text="Sơ cứu ngưng thở hoặc tim ngưng đập" />

                    <!-- Description -->
                    <TextView
                        android:id="@+id/tvGuideDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="24dp"
                        android:text="Mô tả chi tiết về hướng dẫn sơ cứu" />

                    <!-- Indicator line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp" />

                    <!-- Button section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="6dp"
                        android:layout_marginBottom="24dp">

                        <Button
                            android:id="@+id/btnGuide"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="Hướng dẫn"
                            android:textAllCaps="false"
                            app:backgroundTint="@null"
                            android:background="@drawable/button_primary"
                            android:textColor="#FFFFFF"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btnLienQuan"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="Liên quan"
                            android:textAllCaps="false"
                            app:backgroundTint="@null"
                            android:background="@drawable/button_secondary"
                            android:textColor="#666666" />

                        <Button
                            android:id="@+id/btnDanhGia"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="Đánh giá"
                            android:textAllCaps="false"
                            app:backgroundTint="@null"
                            android:background="@drawable/button_secondary"
                            android:textColor="#666666"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Steps section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Các bước thực hiện"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="16dp" />


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">
                    <!-- Steps RecyclerView -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSteps"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            tools:itemCount="3"
                            tools:listitem="@layout/item_step" />
                    </ScrollView>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>